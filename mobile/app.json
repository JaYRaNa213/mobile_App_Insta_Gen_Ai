{
  "expo": {
    "name": "InstaGen",
    "slug": "instaGen",
    "scheme": "instagen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.instaGen",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to let you upload media.",
        "NSCameraUsageDescription": "We need camera access to let you capture photos and videos.",
        "NSMicrophoneUsageDescription": "We need microphone access for capturing video with sound."
      }
    },
    "android": {
      "package": "com.yourcompany.instaGen",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker"
      ]
    ]
  }
}
